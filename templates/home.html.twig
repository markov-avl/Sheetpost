{% extends 'index.html.twig' %}

{% block title %}Home{% endblock %}

{% block noposts %}It looks like no one has any posts :(<br>Be the first!{% endblock %}

{% block script %}
    <script src="/{{ rootpath }}/static/authorized.js"></script>
{% endblock %}

{% block logohref %}href="/{{ rootpath }}/home"{% endblock %}

{% block myposts %}
    <a class="nav-link" href="/{{ rootpath }}/myposts">My posts</a>
    <a class="nav-link" href="/{{ rootpath }}/mysheets">My sheets</a>
{% endblock %}

{% block buttons %}
    <div class="opacity-50 d-flex align-items-center">@{{ user }}</div>
    {% include 'newpost.html.twig' %}
    {% include 'logout.html.twig' %}
{% endblock %}

{% block postcontrol %}
    {% include 'editpost.html.twig' %}
    {% include 'deletepost.html.twig' %}
{% endblock %}

{% block sheetrole %}role="button"{% endblock %}